<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label: 
                text:"User Login"
                font_size: '20sp'
            TextInput:
                id: uname
                hint_text: "Username"
            TextInput:
                id: pword
                hint_text: "Password"
                password: True
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.uname.text, root.ids.pword.text)
                    size_hint:0.3,0.5
                    pos_hint: {'center_x':0.5, 'center_y':0.5}
            Label:
                id: login_wrong
                text: ""

        GridLayout:
            cols:2
            size_hint:0.2,0.2
            padding: 15,15
            spacing: 10,0
            Button:
                text: "Forgot Password?"
                background_color: 1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5

<SignUpScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text:"Please Register"
                font_size: '20sp'
            TextInput:
                id: uname
                hint_text:"Enter Username"
                size_hint: 0.3,0.5
            TextInput:
                id: pword
                hint_text:"Enter Password"
                password: True
            Button:
                text: "Register"
                on_press: root.add_user(root.ids.uname.text,root.ids.pword.text)
                size_hint:0.3,0.5
                pos_hint: {'center_x':0.5, 'center_y':0.5}

<SignUpSuccess>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"User registered successfully!"
            Button:
                text: "Login"
                on_press: root.back_to_login()

<LoginSuccess>:
    GridLayout:
        cols:1
        padding: 30,30
        spacing: 20,20
        RelativeLayout:
            ImageButton:
                text: "Logout"
                on_press: root.logout()
                source:'mobile_app/logout_nothover.png' if self.hovered else 'mobile_app/logout_hover.png'
                size_hint: 0.4,0.4
                pos_hint: {'center_x':0.9, 'center_y':0.8}
        Label:
            text: "How do you feel?"
            font_size: '20sp'
        TextInput:
            id: feeling
            hint_text:"Try: Happy, Sad, Unloved"
        Button:
            text: "Enlighten Me"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: msg
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpSuccess:
        name: "sign_up_success"
    LoginSuccess:
        name: "login_success"
